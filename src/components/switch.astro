---
const { id } = Astro.props
---

<label class='switch'>
  <input type='checkbox' id={id} />
  <span class='slider'></span>
</label>

<style>
  .switch {
    position: relative;
    display: inline-block;
    width: 40px;
    height: 20px;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: hsl(var(--toggle-bg));
    -webkit-transition: 0.4s;
    transition: 0.4s;
    border-radius: var(--br-full);
  }

  .slider:before {
    position: absolute;
    content: '';
    height: 16px;
    aspect-ratio: 1;
    left: 4px;
    bottom: 2px;
    background-color: hsl(var(--toggle-fg));
    -webkit-transition: 0.4s;
    transition: 0.4s;
    border-radius: var(--br-full);
  }

  .switch:hover .slider {
    background-color: hsl(var(--toggle-bg--checked));
  }

  input:checked + .slider {
    background-color: hsl(var(--toggle-bg--checked));
  }

  input:focus + .slider {
    box-shadow: 0 0 1px hsl(var(--toggle-bg--checked));
  }

  input:checked + .slider:before {
    -webkit-transform: translateX(16px);
    -ms-transform: translateX(16px);
    transform: translateX(16px);
  }
</style>
